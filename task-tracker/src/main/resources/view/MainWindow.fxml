<VBox minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.ui.MainWindow">
   <children>
      <SplitPane fx:id="splitpane" dividerPositions="0.7" minHeight="400.0" prefHeight="400.0" prefWidth="200.0">
         <items>
            <VBox fx:id="taskList" minHeight="300.0" minWidth="340" prefWidth="340">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
               <children>
                  <AnchorPane fx:id="taskListPanelPlaceholder" maxWidth="450.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <AnchorPane fx:id="listStatisticsPlaceholder" maxWidth="300.0" minWidth="300.0" prefHeight="300.0" prefWidth="300.0" />
         </items>
      </SplitPane>
       <AnchorPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="anchor-pane-with-border">
           <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
           </padding>
       </AnchorPane>
      <AnchorPane fx:id="commandBoxPlaceholder" prefHeight="32.0" prefWidth="690.0" styleClass="anchor-pane-with-border">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </AnchorPane>
      <AnchorPane fx:id="statusbarPlaceholder" nodeOrientation="RIGHT_TO_LEFT">
         <stylesheets>
            <URL value="@DarkTheme.css" />
            <URL value="@Extensions.css" />
         </stylesheets>
      </AnchorPane>
   </children>
   <stylesheets>
      <URL value="@DarkTheme.css" />
      <URL value="@Extensions.css" />
   </stylesheets>
</VBox>
